{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "files": ["src/electron/preload/types.d.ts", "src/electron/channels.ts"],
  "include": [
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/global.d.ts",
    "src/electron/preload/types.d.ts"
  ],
  "exclude": ["src/electron/**/*"],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/*"]
    },
    "types": ["vitest/globals"],
    "moduleResolution": "bundler",
    "strict": true
  }
}
