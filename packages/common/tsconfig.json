{
  "include": ["./src/**/*"],
  "exclude": [],
  "compilerOptions": {
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
