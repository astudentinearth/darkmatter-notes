{
  "name": "darkwrite",
  "version": "0.1.0-alpha.1",
  "description": "",
  "scripts": {
    "test:all": "yarn worksapces foreach test",
    "coverage:all": "pnpm -r test:coverage",
    "dev": "concurrently \" yarn workspace @darkwrite/common watch \"  \" yarn workspace @darkwrite/app-desktop dev  \"",
    "build:desktop": "yarn workspace @darkwrite/app-desktop build",
    "build:common": "yarn workspace @darkwrite/common build",
    "build:desktop:win": "yarn workspace @darkwrite/app-desktop build:win",
    "build:desktop:linux": "yarn workspace @darkwrite/app-desktop build:linux",
    "build:desktop:mac": "yarn workspace @darkwrite/app-desktop build:mac",
    "build:win": "npm-run-all --serial build:common build:desktop:win",
    "build:linux": "npm-run-all --serial build:common build:desktop:linux",
    "build:mac": "npm-run-all --serial build:common build:desktop:mac"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^2.1.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.5.1"
}
