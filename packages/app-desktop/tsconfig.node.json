{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
  "src/electron/**/*", 
  "src/electron/**/*.d.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node", "vitest/globals"],
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "esm": true
  }
}
