{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/electron/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/*"
      ],
    },
    "types": ["vitest/globals"],
    "moduleResolution": "bundler"
  }
}
