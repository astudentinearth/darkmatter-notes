{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
  "electron.vite.config.*", 
  "src/main/**/*", 
  "src/preload/**/*",
  "src/preload/*.d.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node", "vitest/globals"],
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "esm": true
  }
}
