{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "darkwrite",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "path":{
        "all": true
      },
      "fs":{
        "all": true,
        "copyFile": true,
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "scope": ["$APP/**/*"],
        "writeFile": true,
        "exists": true
      },
      "os":{
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Copyright (c) 2022 astudentinearth",
      "deb": {
        "depends": [],
        "files": {
          "/usr/share/doc/io.github.astudentinearth.darkwrite/copyright/LICENSE":"../LICENSE",
          "/usr/share/doc/io.github.astudentinearth.darkwrite/copyright/3rd-party-licenses.txt":"../src/3rd-party-licenses.txt",
          "/usr/share/doc/io.github.astudentinearth.darkwrite/copyright/apache-2.0.txt":"../src/fonts/LICENSE.txt"      
        }
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.github.astudentinearth.darkwrite",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix":{
          "license": "../LICENSE"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Darkwrite",
        "width": 800,
        "minHeight": 300,
        "minWidth": 800,
        "fileDropEnabled": true
      }
    ]
  }
}